{
  "name": "@rapiwa/n8n-nodes-rapiwa",
  "version": "0.1.1",
  "description": "Rapiwa is a Low-Cost WhatsApp API for Developer and Users. This node package allows you to use Rapiwa in n8n.",
  "keywords": [
    "n8n-community-node-package",
    "n8n-nodes",
    "whatsapp",
    "rapiwa",
    "n8n"
  ],
  "license": "MIT",
  "homepage": "https://app.rapiwa.com",
  "author": {
    "name": "SpaGreen Creative",
    "email": "info@spagreen.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rapiwa/n8n-nodes-rapiwa"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "release-it"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/RapiwaApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Rapiwa/Rapiwa.node.js",
      "dist/nodes/Rapiwa/RapiwaTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "~8.32.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "jest": "^30.2.0",
    "n8n-workflow": "*",
    "prettier": "^3.5.3",
    "release-it": "^19.0.5",
    "ts-jest": "^29.4.5",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    }
  }
}
